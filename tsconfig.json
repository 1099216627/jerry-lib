{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "es6",
    "target": "es2020",
    "allowJs": false,
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/index.ts",
    "src/*"
  ],
  "ts-node": { // 支持ts-node运行TS文件
    "compilerOptions": {
      "module": "CommonJS",
      "allowJs": true // 在测试文件中运行使用JS文件
    }
  }
}